<h1>Available fish data</h1>
<table border="1">
  <thead>
    <tr>
      <th>Fish name</th>
      <th>Amount</th>
      <th>Price</th>
      <th>Health Condition</th>
      <th>Action</th>
    </tr>
  </thead>
  <hr />
  <tbody>
    {{#fishdata}}
    <tr>
      <td>{{ fish }}</td>
      <td>{{ amount }}</td>
      <td>{{ price }}</td>
      <td>{{ health_condition }}</td>
      <td>
        <button
          type="button"
          class="btn btn-danger"
          onclick="location.href='{{ deleteurl }}?id={{ id }}&name={{ fish }}'"
        >
          Delete
        </button>
        <button
          type="button"
          class="btn btn-warning"
          onclick="location.href='{{ editurl }}?id={{ id }}'"
        >
          Edit
        </button>
      </td>
    </tr>
  </tbody>
  {{/fishdata}}
</table>

<hr />
<input
  type="button"
  value="Add new fish"
  class="btn btn-outline-primary"
  onclick="location.href='{{ addurl }}'"
/>
